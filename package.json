{
  "name": "org-sim",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "r.js -o build.js && cp src/index.html out && cp lib/require.js out/js && cp -r src/css out && cp -r src/tiles out",
    "build-tiles": "r.js -o build-tiles.js && cp src/tiles.html out && cp lib/require.js out/js && cp -r src/css out && cp -r src/tiles out",
    "watch": "npm-watch",
    "test": "mocha --recursive test"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "8.11"
  },
  "watch": {
    "build-tiles": {
      "patterns": [
        "src",
        "lib"
      ],
      "extensions": "js,html,glsl,css",
      "quiet": false
    },
    "build": {
      "patterns": [
        "src",
        "lib"
      ],
      "extensions": "js,html,glsl,css",
      "quiet": false
    }
  },
  "dependencies": {
    "requirejs": "^2.3.5"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "npm-watch": "^0.3.0",
    "sinon": "^6.3.1",
    "text": "github:requirejs/text"
  }
}
